<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.aosip.support.preference.SecureSettingSwitchPreference
        android:defaultValue="false"
        android:key="kcal_enabled"
        android:title="@string/kcal_disabled" />

    <com.aosip.support.preference.SecureSettingSwitchPreference
        android:defaultValue="false"
        android:dependency="kcal_enabled"
        android:key="kcal_boot"
        android:title="@string/kcal_boot" />

    <PreferenceCategory
        android:key="kcal_colors"
        android:title="@string/kcal_colors">

        <com.aosip.support.preference.CustomSeekBarPreference
            android:defaultValue="256"
            android:dependency="kcal_enabled"
            android:key="kcal_red"
            android:max="256"
            android:title="@string/kcal_red" />

        <com.aosip.support.preference.CustomSeekBarPreference
            android:defaultValue="256"
            android:dependency="kcal_enabled"
            android:key="kcal_green"
            android:max="256"
            android:title="@string/kcal_green" />

        <com.aosip.support.preference.CustomSeekBarPreference
            android:defaultValue="256"
            android:dependency="kcal_enabled"
            android:key="kcal_blue"
            android:max="256"
            android:title="@string/kcal_blue" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="kcal_calibration"
        android:title="@string/kcal_calibration">

        <com.aosip.support.preference.CustomSeekBarPreference
            android:defaultValue="255"
            android:dependency="kcal_enabled"
            android:key="kcal_saturation"
            android:max="383"
            android:title="@string/kcal_saturation" />

        <com.aosip.support.preference.CustomSeekBarPreference
            android:defaultValue="255"
            android:dependency="kcal_enabled"
            android:key="kcal_value"
            android:max="383"
            android:title="@string/kcal_value" />

        <com.aosip.support.preference.CustomSeekBarPreference
            android:defaultValue="255"
            android:dependency="kcal_enabled"
            android:key="kcal_contrast"
            android:max="383"
            android:title="@string/kcal_contrast" />

        <com.aosip.support.preference.CustomSeekBarPreference
            android:defaultValue="0"
            android:dependency="kcal_enabled"
            android:key="kcal_hue"
            android:max="1536"
            android:title="@string/kcal_hue" />

    </PreferenceCategory>
</PreferenceScreen>
